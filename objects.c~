#include <SDL.h>

Sprite::Sprite(){
}

Button::Button(int x1,int y1,int x2,int y2){
    rect.x = x1;
    rect.y = y1;
    rect.w = x2-x1;
    rect.h = y2-y1;
}

bool Button::check_hit(Sint16 x, Sint16 y){
    if(x>rect.x && y>rect.y && x<rect.x+rect.w && y<rect.y+rect.h) return true;
    else return false;
}
